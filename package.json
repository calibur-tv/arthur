{
  "name": "arthur",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn workspaces foreach -p run dev",
    "deploy": "yarn workspaces foreach run deploy",
    "lint": "eslint --ext \".js,.vue\" --ignore-path .gitignore . --fix"
  },
  "workspaces": [
    "projects/*",
    "services/*",
    "modules/*",
    "shared/*"
  ],
  "devDependencies": {
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.25.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.9.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "npm run lint",
      "git add"
    ]
  }
}
